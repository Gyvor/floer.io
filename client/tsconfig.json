{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "strictNullChecks": true,
        "strict": true,
        "types": ["vite/client", "node"],
        "paths": {
            "@common/*": ["../common/src/*"],
            "@/*": ["./src/*"]
        },
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src",
        "../common/src"
    ]
}
