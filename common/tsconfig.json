{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/*",
        "../server/src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
